            //validate for input field
            $("#tm-in-ngaycap").blur(() => { if ($("#tm-in-ngaycap").val() == null || $("#tm-in-ngaycap").val() == "") { $("#tm-nc-warning").show()  } })
            $("#tm-in-ngaycap").focus(() => { $("#tm-nc-warning").hide(); $("#tm-nc-warning2").hide()  })

