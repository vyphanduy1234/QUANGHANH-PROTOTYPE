            })
        };

        // popup len form them moi khi nhan vao them moi cho nhan vien chua co chung chi
    var popupThemMoi = (mnv, mcc) => {

         $("#pre-load").show();
            $.ajax({
                url: '@Url.Action("getThemMoiPopUpInfo", "Task")',
                type: "POST",
                data: { maNV: mnv, maCC: mcc },
                dataType: "json",
                success: (response) => {
                    data = response.data
