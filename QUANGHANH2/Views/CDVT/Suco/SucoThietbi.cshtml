                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        $("#listid-s").empty();
                        var option = "";
                        for (var i = 0; i < data.id.length; i++) {
                            var s = data.id[i].equipmentId;
                            var a = "<option value='" + s + "'>" + s + "</option>";
                            option += a;
                        }
