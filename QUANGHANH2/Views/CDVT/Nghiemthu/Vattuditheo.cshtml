@{
    ViewData["Title"] = "Xincapvattu";
    if (Session["departID"].ToString().Contains("PX"))
    {
        Layout = "~/Views/Shared/_Layout_PhanXuong.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout_CDVT.cshtml";
    }
}
<div class="card">
    <div class="card-content">
        <div class="row">
            <div class="col s12">
                <div class="center">
                    <h3>
                        <b>VẬT TƯ THIẾT BỊ</b>
                    </h3>
                    <h5>
                        <b style="color:green">VẬT TƯ THIẾT BỊ</b>
                    </h5>
                </div>
                <div id="thaythe" class="col s12">
                    <table class="striped centered table-bordered" id="thaythetable">
                        <thead>
                            <tr>
                                <th rowspan="2">Mã nhóm vật tư</th>
                                <th rowspan="2">Tên vật tư</th>
                                <th rowspan="2">ĐVT</th>
                                <th>Số lượng</th>
                                <th>Tình trạng kỹ thuật</th>
                            </tr>
                        </thead>

                        <tbody>
                            @for (int i = 0; i < ViewBag.ListSup3.Count; i++)
                            {
                                if (i % 2 == 0)
                                {
                                    <tr>
                                        <td rowspan="2">@ViewBag.ListSup3[i].equipmentId</td>
                                        <td rowspan="2">@ViewBag.ListSup3[i].supply_name</td>
                                        <td rowspan="2">@ViewBag.ListSup3[i].unit</td>
                                        <td>@ViewBag.ListSup3[i].quantity</td>
                                        <td>@ViewBag.ListSup3[i].supplyStatus</td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <td>@ViewBag.ListSup3[i].quantity</td>
                                        <td>@ViewBag.ListSup3[i].supplyStatus</td>
                                    </tr>
                                }
                            }
                            @if (ViewBag.ListSup3.Count == 0)
                            {
                            <td colspan="5">Không có dữ liệu</td>
                        }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>



