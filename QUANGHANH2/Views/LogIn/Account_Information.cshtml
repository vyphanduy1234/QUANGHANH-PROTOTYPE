@{
    Layout = null;
}

<!DOCTYPE html>
<style>
    body {
        overflow-y: hidden !important;
    }

    .tabs .tab a {
        color: #5b616e !important;
    }

    .tabs .indicator {
        background-color: #039be5 !important;
    }

    .img-circle {
        border-radius: 50% !important;
    }

    .page-titles {
        padding: 10px 30px 0px 30px !important;
    }

    hr {
        border: 4px solid #039be5 !important;
        border-radius: 5px !important;
        width: 900px !important;
        margin-left: calc((100% - 900px)/2) !important
    }

    .right-part {
        width: calc(100% - 400px) !important;
        margin-left: 400px !important;
    }

    .topbar nav .nav-wrapper .brand-logo {
        background-color: white !important;
    }

    .left-part {
        height: unset !important;
        width: 400px !important;
        position: absolute;
        border-right: 1px solid rgba(120, 130, 140, 0.13);
    }
</style>
<html>
<head>
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <title>Account_Information</title>
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/images/favicon.png">
    <link href="~/css/TABLE_BORDERED.css" rel="stylesheet" />
    <link href="~/dist/css/style.css" rel="stylesheet">
    <link href="~/css/preloader/css.css" rel="stylesheet" />
    <link href="~/assets/sweetalert/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/assets/Custom css/form-input-border.css" rel="stylesheet" />

    <script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/dist/js/materialize.min.js"></script>
    <script src="~/assets/libs/perfect-scrollbar/dist/js/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/js/Custom JS/form-input-border.js"></script>

    <script src="~/dist/js/custom.min.js"></script>
    <script src="~/js/Flexible_user_icon.js"></script>
    <script src="~/assets/sweetalert/alert-quanghanh-js.js"></script>
    <script src="~/assets/sweetalert/sweetalert2.all.min.js"></script>
    <script src="~/assets/sweetalert/sweetalert2.min.js"></script>
</head>
<body>
    <div class="main-wrapper">
        <div class="preloader">
            <div class="loading">
                <div class="preloader-wrapper big active">
                    <div class="spinner-layer spinner-blue-only">
                        <div class="circle-clipper left">
                            <div class="circle"></div>
                        </div><div class="gap-patch">
                            <div class="circle"></div>
                        </div><div class="circle-clipper right">
                            <div class="circle"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <header class="topbar">
            <nav>
                <div class="nav-wrapper">
                    <a href="/@Session["url"].ToString()" class="brand-logo">
                        <span class="icon">
                            <img class="light-logo" src="/assets/images/logo-light-icon.png">
                        </span>
                        <span class="text">
                            <img class="light-logo" src="/assets/images/logo-dark-text.png">
                        </span>
                    </a>
                    <ul class="right">
                        <li>
                            <a class="dropdown-trigger" href="javascript: void(0);" data-target="user_dropdown"><img src="/assets/images/users/2.jpg" alt="user" class="circle profile-pic"></a>
                            <ul id="user_dropdown" class="mailbox dropdown-content dropdown-user">
                                <li>
                                    <div class="dw-user-box">
                                        <div class="u-img"><img src="/assets/images/users/2.jpg" alt="user"></div>
                                        <div class="u-text">
                                            <h4>@Session["Name"]</h4>
                                            <p>@Session["username"]</p>
                                            <a class="waves-effect waves-light btn-small red white-text">Xem Hồ Sơ</a>
                                        </div>
                                    </div>
                                </li>
                                <li role="separator" class="divider"></li>
                                <li><a href="@Url.Action("Detail","LogIn")"><i class="small material-icons">account_circle</i> Hồ Sơ Của Tôi</a></li>
                                <li><a href="#"><i class="small material-icons">inbox</i> Tin nhắn</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#"><i class="small material-icons">settings</i> Cài Đặt Tài Khoản</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="@Url.Action("Logout","LogIn")"><i class="small material-icons">power_settings_new</i>Đăng Xuất</a></li>
                            </ul>
                        </li>
                        <li id="user-icon"><a href="" style="color:black">@Session["Name"] <span class="new badge red" data-badge-caption="@Session["Position"]"></span></a></li>
                    </ul>
                </div>
            </nav>
        </header>
        <div class="page-wrapper">
            <div class="card">
                <div class="card-content">
                    <div class="page-titles center">
                        <h1><b>HỒ SƠ CÁ NHÂN</b></h1>
                    </div>
                    <hr />
                    <div class="left-part">
                        <div class="p-15">
                            <div style="background-color: #444343; color: white; text-align: center; height:450px !important">
                                <br />
                                <br />
                                <br />
                                <img id="avatar" src="~/images/icons/avatar.jpg" style="width: 160px; height: 160px" class="img-circle" />
                                <br />
                                <br />
                                <span style="font-size:30px">@Session["Name"]</span>
                                <br />
                                <br />
                                <span style="font-size:18px"><a style="color:white"><i class="icon-user"></i>&nbsp;@Session["Position"]</a></span>
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                            </div>
                        </div>
                    </div>
                    <div class="right-part">
                        <div class="row">
                            <div class="col s12">
                                <ul class="tabs" style="overflow-x:hidden;overflow-y:hidden">
                                    <li class="tab col s6"><a class="active" href="#infoacc"><b>Thông tin tài khoản</b></a></li>
                                    <li class="tab col s6"><a href="#pass"><b>Sửa thông tin</b></a></li>
                                </ul>
                            </div>
                            <div id="infoacc">
                                <table class="table table-responsive striped">
                                    <thead>
                                        <tr>
                                            <th style="text-align: center; width: 33%; background-color: rgba(85, 85, 85, 0) !important; border-bottom: 0 !important"></th>
                                            <th style="text-align: center; width: 33%; background-color: rgba(85, 85, 85, 0) !important; border-bottom: 0 !important"></th>
                                            <th style="text-align: center; width: 33%; background-color: rgba(85, 85, 85, 0) !important; border-bottom: 0 !important"></th>
                                            <th style="text-align: center; width: 33%; background-color: rgba(85, 85, 85, 0) !important; border-bottom: 0 !important"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td style="text-align: center"><strong>Tên đăng nhập :</strong></td>
                                            <td style="text-align: center" colspan="2">
                                                <span>@Session["username"]</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="text-align: center"><strong>Họ và tên :</strong></td>
                                            <td style="text-align: center" colspan="2">
                                                <span>@Session["Name"]</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="text-align: center"><strong>Chức danh :</strong></td>
                                            <td style="text-align: center" colspan="2">
                                                <span>@Session["Position"]</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="text-align: center"><strong>Phòng ban :</strong></td>
                                            <td style="text-align: center" colspan="2">
                                                <span>@Session["departName"]</span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div id="pass">
                                <div class="row">
                                    <div class="col s12 p-20">
                                        <input id="matkhaucu" class="form-control" style="width: 100%" type="password" placeholder="Nhập mật khẩu hiện tại" />
                                        <br />
                                        <input id="matkhau" class="form-control" style="width: 100%" type="password" placeholder="Nhập mật khẩu mới" />
                                        <br />
                                        <input id="rematkhau" class="form-control" style="width: 100%" type="password" placeholder="Nhập lại mật khẩu một lần nữa" />
                                        <br />
                                        <div Class="margin-top-10">
                                            <button type="button" class="btn btn-primary float-right blue" onclick="ResetPassword()">Đổi mật khẩu</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    $(document).ready(function () {

    });
    function ResetPassword() {
        $('#pre-load').show();
        var empObj = {
            oldPass: document.getElementById("matkhaucu").value,
            newPass: document.getElementById("matkhau").value,
            rePass: document.getElementById("rematkhau").value
        };
        $.ajax({
            url: "/LogIn/ResetPassword",
            data: JSON.stringify(empObj),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                switch (result.CodeError) {
                    case 1:
                        errorAlert('Lỗi', result.Data);
                        break;
                    case 2:
                        successAlert(result.Data, '');
                        setTimeout(function () {
                            window.location.href = "/LogIn/Detail";
                        }, 1500);
                        break;
                }
                $('#pre-load').hide();
            },
            error: function (errormessage) {
                errorAlert('Lỗi', 'Có lỗi xảy ra');
                $('#pre-load').hide();
            }
        });
    }

    $(".loading").css("z-index", 99999);
    $('body').css('overflow', '');
</script>